<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/holder_report_workout"
    android:padding="8dp"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/holder_report_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/mini_project"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/holder_exerciseName_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Push ups"
        android:fontFamily="@font/martel_semibold_text"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/holder_report_image"
        app:layout_constraintTop_toTopOf="@+id/holder_report_image" />

    <TextView
        android:id="@+id/holder_exerciseTime_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        app:drawableTint="#FF5722"
        android:fontFamily="@font/martel_extrabold_text"
        android:gravity="center_vertical"
        android:text="00:30"
        android:textColor="#FF5722"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/holder_report_image" />

    <TextView
        android:id="@+id/holder_report_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="18/11/2020"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        android:fontFamily="@font/martel_semibold_text"
        app:layout_constraintEnd_toEndOf="@+id/holder_exerciseName_report"
        app:layout_constraintStart_toStartOf="@+id/holder_exerciseName_report"
        app:layout_constraintTop_toBottomOf="@+id/holder_exerciseName_report" />

    <TextView
        android:id="@+id/holder_exercise_calories_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_local_fire_department_24"
        android:fontFamily="@font/martel_extrabold_text"
        android:gravity="center_vertical"
        android:text="568 kcal"
        android:textColor="#C62828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>